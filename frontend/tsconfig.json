{
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "src/.d/*.d.ts"
    ],
    "exclude": [
      "node_modules",
    ],
    "rootDir": "src"
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/.d/*.d.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "references": [{"path": "./tsconfig.node.json"}]
}
